{
  "name": "npm-count",
  "main": "npm-count.min.js",

  "opc-scripts": {
    "build": [
      "browserify ./src",
      "--transform coffeeify",
      "--standalone npmCount",
      "--extension .coffee",
      "--debug"
    ],
    "uglify": [
      "uglifyjs",

      "npm-count.js",
      "--in-source-map",
      "npm-count.js.map",

      "--mangle",
      "--compress",

      "--output",
      "npm-count.min.js",
      "--source-map",
      "npm-count.min.js.map"
    ]
  },

  "ignore": [
    "**/.*",
    "node_modules",
    "bower_components",
    "*.coffee",
    "src",
    "test"
  ],

  "authors": [
    "59naga <i59naga@icloud.com>"
  ],
  "homepage": "https://github.com/59naga/npm-count",

  "license": "MIT"
}